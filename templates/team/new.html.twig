{% extends 'base.html.twig' %}

{% block body %}
<div class="container mt-5">
    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="d-flex w-100 justify-content-center">
                <div class="alert alert-{{ category }} w-25">
                    <i class="fa-solid fa-triangle-exclamation pe-2"></i>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}

    <div class="">
        <h1 class="mb-3">Créer une nouvelle équipe</h1>
        <p class="fw-bold">Sélectionnez le numéro de licence de votre partenaire :</p>
        <div class="w-50">
            {{ form_start(form) }}
            {{ form_widget(form.players) }}
            <button class="btn btn-primary mt-3">{{ button_label|default('Valider') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
