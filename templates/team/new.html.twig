{% extends 'base.html.twig' %}

{% block body %}

    {% for category, messages in app.flashes %}
        {% for message in messages %}
            <div class="d-flex w-100 justify-content-center">
                <div class="alert alert-{{ category }} w-25">
                    <i class="fa-solid fa-triangle-exclamation pe-2"></i>
                    {{ message }}
                </div>
            </div>
        {% endfor %}
    {% endfor %}


    <div class="d-flex w-100 flex-column align-items-center">
        <h2 class="m-3">Créer une nouvelle équipe</h2>
        <p class="small fw-bold">Sélectionnez le numéro de licence de votre partenaire :</p>
        <div class="w-25">
            {{ form_start(form) }}
            {{ form_widget(form.players, { 'attr': {'class': 'form-control'} },  {'label_attr': {'class': 'visually-hidden'}}) }}
            <div class="d-flex w-100 justify-content-center">
                <button class="btn btn-primary m-3">{{ button_label|default('Valider') }}</button>
            </div>
            {{ form_end(form) }}
        </div>

    </div>


{% endblock %}
