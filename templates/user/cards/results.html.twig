<div class="card mb-4 mb-lg-0 shadow">
    <div class="card-body">
        <div class="d-flex justify-content-between mb-4">
            <p class=" mb-0 fw-bold"><i class="fas fa-trophy pe-2"></i>Mes résultats</p>
            {% if app.user.point is not empty %}
                <span class="badge text-bg-secondary fs-6">{{ app.user.point }} points</span>
            {% else %}
                <span class="badge text-bg-secondary fs-6">0 point</span>
            {% endif %}
        </div>
        <ul class="list-group list-group-flush rounded-3">
            {% if results is empty %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <small class="text-body-secondary">Vous n'avez aucun résultat pour le
                    moment.</small>
            </li>
            {% else %}
            {% for result in results %}
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-sm-7">
                            <p class="mb-0"><b>{{ result.ranking }}e</b> place : {{ result.points }}
                                points</p>
                        </div>
                        <div class="col-sm-5">
                            <p class="text-muted mb-0"><small
                                        class="text-body-secondary">{{ result.tournament.name }}</small>
                            </p>
                        </div>
                    </div>
                </li>
            {% endfor %}
        </ul>
        {% endif %}
