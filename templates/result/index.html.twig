{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">
        {% for category, messages in app.flashes %}
            {% for message in messages %}
                <div class="row">
                    <div class="col">
                        <div class="alert alert-{{ category }} w-25">
                            <i class="fa-solid fa-circle-check pe-2"></i>
                            {{ message }}
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% endfor %}
        <div class="row">
            <div class="col">
                <h1 class="fs-3 mb-4"><i class="fas fa-trophy pe-3"></i>Classement national</h1>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-xl-6 col-md-6">
                <div class="card bg-pattern shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <i class="fa fa-ranking-star text-danger h4 ml-3"></i>
                            <h5 class="font-size-20 mt-0">Classement féminin</h5>
                        </div>
                        <div class="ps-5">
                            <p class="mb-1"><i class="fa-solid fa-medal pe-2" style="color: goldenrod"></i><span class="fw-bold">1 - {{ womanPodium[0].firstname }} {{ womanPodium[0].lastname }}</span> ({{ womanPodium[0].point }} points)</p>
                            <p class="mb-1"><i class="fa-solid fa-medal pe-2" style="color: silver"></i><span class="fw-bold">2 - {{ womanPodium[1].firstname }} {{ womanPodium[1].lastname }}</span> ({{ womanPodium[1].point }} points)</p>
                            <p class="mb-1"><i class="fa-solid fa-medal pe-2" style="color: brown"></i><span class="fw-bold">3 - {{ womanPodium[2].firstname }} {{ womanPodium[2].lastname }}</span> ({{ womanPodium[2].point }} points)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-6 col-md-6">
                <div class="card bg-pattern shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <i class="fa fa-ranking-star text-primary h4 ml-3"></i>
                            <h5 class="font-size-20 mt-0">Classement masculin</h5>
                        </div>
                        <div class="ps-5">
                            <p class="mb-1"><i class="fa-solid fa-medal pe-2" style="color: goldenrod"></i><span class="fw-bold">1 - {{ manPodium[0].firstname }} {{ manPodium[0].lastname }}</span> ({{ manPodium[0].point }} points)</p>
                            <p class="mb-1"><i class="fa-solid fa-medal pe-2" style="color: silver"></i><span class="fw-bold">2 - {{ manPodium[1].firstname }} {{ manPodium[1].lastname }}</span> ({{ manPodium[1].point }} points)</p>
                            <p class="mb-1"><i class="fa-solid fa-medal pe-2" style="color: brown"></i><span class="fw-bold">3 - {{ manPodium[2].firstname }} {{ manPodium[2].lastname }}</span> ({{ manPodium[2].point }} points)</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mb-4">
            <div class="col-xl-8 col-md-6">
                <div class="card shadow">
                    <div class="card-body">
                        <form method="post">
                            {{ form_start(form) }}
                            <div class="form-group m-2">
                                <div class="input-group d-flex justify-content-center">
                                    {{ form_row(form.search, {'attr': {'class': 'form-control', 'style': 'width: 745px;', 'placeholder': 'Rechercher un joueur...', 'aria-describedby': 'project-search-addon'}}) }}
                                    <div class="input-group-append mx-1">
                                        <button class="btn btn-primary" type="submit" id="project-search-addon"><i
                                                    class="fa fa-search search-icon font-12"></i></button>
                                    </div>
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-xl-4 col-md-6">
                <div class="card bg-pattern shadow">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="font-size-20 mt-0">Filtre par genre</h5>
                            <i class="fa fa-th text-success h4 ml-3"></i>
                        </div>
                        <p class="text-muted mb-0">à remplir</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="card shadow">
                    <div class="card-body">
                        <div class="table-responsive project-list">
                            <table class="table project-table table-centered table-nowrap table-hover">
                                <thead>
                                <tr>
                                    <th scope="col">Place</th>
                                    <th scope="col">Joueur</th>
                                    <th scope="col">Club</th>
                                    <th scope="col">Points</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% set rank = 1 %}
                                {% for player in players %}
                                    <tr>
                                        <td>{{ rank }}</td>
                                        <td class="text-muted">{{ player.firstname }} {{ player.lastname }}</td>
                                        <td>{{ player.club.name }}</td>
                                        <td>{{ player.point }}</td>
                                    </tr>
                                    {% set rank = rank + 1 %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="pt-3">
                            <div class="w-100 d-flex justify-content-center mb-0">
                                {{ knp_pagination_render(players) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

