{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-primary py-3">S'inscrire</h1>
    <div class="w-25">
        <p class="small fw-bold">Sélectionnez l'équipe avec laquelle vous souhaitez vous inscrire dans la liste ci-dessous :</p>
        <form method="post">
            {{ form_start(form) }}
            {{ form_widget(form.teams, { 'attr': {'class': 'form-control'} },  {'label_attr': {'class': 'visually-hidden'}}) }}
            <div class="d-flex w-100 justify-content-center">
                <button class="btn btn-primary my-3">{{ button_label|default('Confirmer') }}</button>
            </div>
            {{ form_end(form) }}
        </form>
    </div>



{% endblock %}