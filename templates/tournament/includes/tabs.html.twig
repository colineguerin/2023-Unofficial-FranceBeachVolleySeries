<div class="col-lg-12">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="details-tab" data-bs-toggle="tab"
                    data-bs-target="#details-tab-pane" type="button" role="tab"
                    aria-controls="details-tab-pane" aria-selected="true">Détails
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="teams-tab" data-bs-toggle="tab"
                    data-bs-target="#teams-tab-pane" type="button" role="tab"
                    aria-controls="teams-tab-pane" aria-selected="false">Equipes
                inscrites
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="results-tab" data-bs-toggle="tab"
                    data-bs-target="#results-tab-pane" type="button" role="tab"
                    aria-controls="results-tab-pane" aria-selected="false">Résultats
            </button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="details-tab-pane" role="tabpanel"
             aria-labelledby="details-tab" tabindex="0">
            <div class="mt-3 p-3">
                {{ tournament.details }}
            </div>
        </div>
        <div class="tab-pane fade" id="teams-tab-pane" role="tabpanel"
             aria-labelledby="teams-tab" tabindex="0">
            <div class="mt-3 p-3">
                {% if teams is empty %}
                    <p class="small fw-bold">Aucune équipe n'est inscrite pour
                        le moment.</p>
                {% else %}
                    <ol class="list-group list-group-numbered list-group-flush">
                        {% for team in teams %}
                            <li class="list-group-item">{{ team.players[0].firstname }} {{ team.players[0].lastname }}
                                / {{ team.players[1].firstname }} {{ team.players[1].lastname }}</li>
                        {% endfor %}
                    </ol>
                {% endif %}
            </div>
        </div>
        <div class="tab-pane fade" id="results-tab-pane" role="tabpanel"
             aria-labelledby="results-tab" tabindex="0">
            <div class="mt-3 p-3">
                {% if tournament.results is empty %}
                    <p class="small fw-bold">Les résultats n'ont pas encore été
                        comptabilisés.</p>
                {% else %}
                    <ul class="list-group list-group-flush">
                        {% for result in tournament.results %}
                            <li class="list-group-item">
                                <p class="mb-0"><b>{{ result.ranking }}e place :</b> {{ result.user.firstname }} {{ result.user.lastname }}</p>
                                <p class="small text-muted mb-0"><i class="fa-solid fa-trophy pe-2"></i>{{ result.points }} points</p>
                            </li>
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
</div>