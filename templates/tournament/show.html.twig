{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">
        <div class="row">
            <div class="col-md-9">
                <div class="d-flex justify-content-between mt-4 mb-3">
                    <h1 class="fs-3">Tournoi : <span class="fw-normal">{{ tournament.name }}</span></h1>
                    <a href="/tournois"><button class="btn btn-outline-secondary"><i class="fa-solid fa-arrow-left-long me-2"></i>Revenir à la liste</button></a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-9">
                <div class="wrapper wrapper-content animated fadeInUp">
                    <div class="ibox">
                        <div class="ibox-content card p-5 shadow">

                            <div class="row">
                                <div class="col-lg-5">
                                    <dl class="dl-horizontal">
                                        <dt><i class="fa-solid fa-location-dot pe-2"></i>A :</dt>
                                        <dd>{{ tournament.location }}</dd>
                                        <dt><i class="fa-solid fa-calendar pe-2"></i>Le :</dt>
                                        <dd>{{ tournament.tournamentDate ? tournament.tournamentDate|date('d-m-Y') : '' }}
                                            à {{ tournament.tournamentDate ? tournament.tournamentDate|date('H:i') : '' }}</dd>
                                    </dl>
                                </div>
                                <div class="col-lg-5" id="cluster_info">
                                    <dl class="dl-horizontal">
                                        <dt><i class="fa-solid fa-shield pe-2"></i>Organisé par :</dt>
                                        <dd>{{ tournament.club }}</dd>
                                        <dt><i class="fa-solid fa-trophy pe-2"></i>Catégorie :</dt>
                                        <dd>{{ tournament.category }}</dd>
                                    </dl>
                                </div>
                                <div class="col-lg-2">
                                    <div class="d-flex justify-content-end">
                                        {% if tournament.tournamentDate < now %}
                                            <span class="badge text-bg-danger h-75 fs-6">Passé</span>
                                        {% else %}
                                            <span class="badge text-bg-success h-75 fs-6">A venir</span>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                            <div class="row py-3">
                                <div class="col-lg-12">
                                    <dl class="dl-horizontal">
                                        {% if availableSpots > 0 %}
                                            <dt>Le tournoi n'est pas encore complet :</dt>
                                            <dd>
                                                <div class="progress progress-striped active m-b-sm">
                                                    <div style="width: {{ completionPercentage }}%;"
                                                         class="progress-bar bg-success"></div>
                                                </div>
                                                <small>Il reste <strong>{{ availableSpots }}</strong> places
                                                    !</small>
                                            </dd>
                                        {% else %}
                                            <dt>Le tournoi est déjà complet !</dt>
                                            <dd>
                                                <div class="progress progress-striped active m-b-sm">
                                                    <div style="width: {{ completionPercentage }}%;"
                                                         class="progress-bar bg-danger"></div>
                                                </div>
                                            </dd>
                                        {% endif %}
                                    </dl>
                                </div>
                            </div>
                            <div class="row m-t-sm">
                                <div class="col-lg-12">
                                    <div class="panel blank-panel">
                                        <div class="panel-heading">
                                            <div class="panel-options">
                                                <ul class="nav nav-tabs">
                                                    <li class="nav-item"><a href="#tab-1" class="nav-link active"
                                                                            data-toggle="tab" aria-expanded="false">Participants</a>
                                                    </li>
                                                    <li class="nav-item"><a href="#tab-2" class="nav-link"
                                                                            data-toggle="tab" aria-expanded="true">Résultats</a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="panel-body">
                                            <div class="tab-content">
                                                <div class="tab-pane active" id="tab-1">
                                                    <div class="mt-3 p-3">
                                                        {% if teams is empty %}
                                                            <p class="small fw-bold">Aucune équipe n'est inscrite pour
                                                                le moment.</p>
                                                        {% else %}
                                                            <ol class="list-group list-group-numbered">
                                                                {% for team in teams %}
                                                                    <li class="list-group-item">{{ team.players[0].firstname }} {{ team.players[0].lastname }}
                                                                        / {{ team.players[1].firstname }} {{ team.players[1].lastname }}</li>
                                                                {% endfor %}
                                                            </ol>
                                                        {% endif %}
                                                    </div>


                                                </div>
                                                <div class="tab-pane" id="tab-2">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="wrapper wrapper-content project-manager">
                    <h4>Inscriptions</h4>
                    {% if availableSpots > 0 %}
                        <p>
                            Il reste encore des places pour vous inscrire. Veuillez sélectionner ci-dessous l'équipe
                            avec laquelle vous souhaitez effectuer ce tournoi.
                        </p>
                        {{ form_start(form) }}
                        {{ form_widget(form.teams) }}
                        <div class="d-flex justify-content-center">
                            <button class="btn btn-primary my-3">{{ button_label|default('S\'inscrire') }}</button>
                        </div>
                        {{ form_end(form) }}
                        <p class="small fw-bold">Si vous n'avez pas d'équipe, vous pouvez en créer une <a
                                    href="{{ path('app_team_new') }}">ici</a> ou réactiver une ancienne équipe sur votre
                            profil.</p>
                    {% else %}
                        <p>Les inscriptions sont fermées !</p>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>


{% endblock %}