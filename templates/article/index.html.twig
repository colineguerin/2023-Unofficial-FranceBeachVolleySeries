{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper">
        <div class="fbvs-banner-img">
            <img src="/assets/images/fbvs_homebanner.png" alt="banner" class="img-fluid">
        </div>
    </div>

    <section class="container mt-4">
        <div class="d-flex justify-content-between w-100">
            <div>
                <h1 class="fw-bold fs-3 mt-5 mb-4">Les dernières actualités beach-volley en France</h1>
            </div>
            <div>
                <form method="post">
                    {{ form_start(form) }}
                    <div class="form-group">
                        <div class="input-group mt-5">
                            <div class="form-outline">
                                {{ form_row(form.search, {'attr': {'class': 'form-control', 'placeholder': 'Rechercher...'}}) }}
                            </div>
                            <div class="input-group-append mx-1">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </form>
            </div>
        </div>
        <div class="row row-cols-1 row-cols-md-2 g-4 mb-5">
            {% for article in articles %}
                <div class="col">
                    <div class="card mx-auto p-2 shadow fbvs-hover-size">
                        <a href="{{ path("article_show", { id: article.id }) }}"
                           style="color: var(--bs-dark); text-decoration: none;">
                            <img src="{{ vich_uploader_asset(article) }}" class="card-img-top img-fluid fbvs-card-img"
                                 alt="...">
                            <div class="card-body">
                                <h5 class="card-title fw-bold">{{ article.title }}
                                </h5>
                                {% if article.subtitle|length > 60 %}
                                    <p class="card-text">{{ article.subtitle|slice(0, 60) ~ '...' }}</p>
                                {% else %}
                                    <p class="card-text">{{ article.subtitle }}</p>
                                {% endif %}
                                <div class="d-flex justify-content-end w-100">
                                    <p class="card-text mb-0"><small class="text-body-secondary">Publié
                                            le {{ article.createdAt ? article.createdAt|date('d-m-Y') : '' }}</small>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="pt-3">
            <ul class="pagination justify-content-center mb-0">
                <li class="page-item disabled">
                    <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Précédent</a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#">Suivant</a>
                </li>
            </ul>
        </div>
    </section>

{% endblock %}
