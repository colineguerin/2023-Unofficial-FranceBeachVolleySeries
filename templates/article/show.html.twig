        <h1 class="mx-auto my-4">{{ article.title }}</h1>
        <p class="card-text d-flex justify-content-end"><small class="text-body-secondary">Publi√© le {{ article.createdAt ? article.createdAt|date('d-m-Y') : '' }}</small></p>
        <img src="{{ article.picture }}" class="card-img-top" alt="..." style="height: 700px; object-fit: cover; object-position: center;">
